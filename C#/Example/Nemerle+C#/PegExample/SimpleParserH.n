using System;
using System.Collections.Generic;
using Nemerle.Collections;
using Nemerle.Peg;

[PegGrammar(option=none, number,grammar {
  ANY            = ['\u0000'..'\uFFFF'];
  comment : void = "/*" (!"*/" ANY)* "*/";
  number  : int = (comment*['0'..'9'])+ comment* !ANY;
})]
class SimpleParserH
{
  number(a : List[NToken]) : int {
    int.Parse(string.Join("",a.MapToArray(GetText)))
  }
}